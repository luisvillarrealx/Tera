@model IEnumerable<Tera_Web.Entities.CategoryObj>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content mt-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title">Registro de categorias</h3>
                    </div>
                    <div class="card-body table-responsive">
                        <div class="pb-2">
                            <a href="@Url.Action("Register","Category")" class="btn btn-primary ml-auto" type="button" value=""><i class="fa-solid fa-plus"></i></a>
                        </div>
                        <table id="Table" class="table table-bordered table-hover table-striped ">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.categoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CategoryName)
                                    </th>
                                    <th class="col-1 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.categoryId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td class="text-center">
                                            <a href="@Url.Action("EditCategory","Category", new { categoryId = item.categoryId })" class="btn btn-warning px-2" type="" value="">
                                                <i class="fas fa-angle-double-right text-light"></i>
                                            </a>
                                            @*<a href="@Url.Action("DeleteCategory","Category", new { categoryId = item.categoryId })" class="btn btn-danger px-2" type="" value="">
                                                <i class="fa-solid fa-xmark"></i>
                                            </a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>