@model Tera_Web.Entities.OrderDetailObj

@{
    ViewData["Title"] = "InsertOrderDetails";
}
<section class="content mt-4">
    <div class="offset-4 container-fluid mt-5">
        <div class="row mt-5">
            <div class="col-md-4 mt-4">
                <div>
                    <h4 class="card-title text-center">Registrar Producto a la orden</h4>
                    @using (Html.BeginForm("InsertOrderDetails", "OrderDetail", FormMethod.Post))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(m => m.orderId)
                        <div class="form-group">
                            <fieldset>
                                <label asp-for="productName" class="control-label"></label>
                                @Html.DropDownListFor(m => m.productId, ViewBag.ComboProductId as List<SelectListItem>, new { @class = "form-control", @onchange = "clearError('userRoleId')"  })
                                @Html.ValidationMessageFor(m => m.productId, "", new { @class = "text-danger", @id = "userRoleId-error" })
                            </fieldset>
                        </div>
                        <div class="form-group">
                            <label asp-for="orderDetailsQuantity" class="control-label"></label>
                            <input asp-for="orderDetailsQuantity" class="form-control" />
                            <span asp-validation-for="orderDetailsQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Registrar" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>