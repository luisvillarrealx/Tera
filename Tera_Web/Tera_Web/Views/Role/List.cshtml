@model IEnumerable<Tera_Web.Entities.RoleObj>

<section class="content mt-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title">Registro de roles</h3>
                    </div>
                    <div class="card-body table-responsive">
                        <div class="pb-2">
                            <a href="@Url.Action("Register","Role")" class="btn btn-primary ml-auto" type="button" value=""><i class="fa-solid fa-plus"></i></a>
                        </div>
                        <table id="Table" class="table table-bordered table-hover table-striped ">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.roleId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.roleName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.roleDescription)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.roleId)
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.roleName))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.roleName)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.roleDescription))
                                            {
                                                <span class="text-center">- - -</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.roleDescription)
                                            }
                                        </td>
                                        <td class="text-center col-1">
                                            <a href="@Url.Action("EditRole","Role", new { ID = item.roleId })" class="text-warning px-2" type="" value=""><i class="fa-solid fa-file-pen"></i></a>
                                            @if (item.roleId <= 3)
                                            {
                                                <i class="fa-solid fa-trash px-2 text-dark"></i>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("DeleteRole","Role", new { ID = item.roleId })" class="text-danger px-2" type="" value=""><i class="fa-solid fa-trash"></i></a>
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>