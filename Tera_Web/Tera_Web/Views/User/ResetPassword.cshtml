@model Tera_Web.Entities.UserObj

@{

}

<div class="contact-page mt-5 pt-5">
    <div class="container mt-5 pt-5">
        <div class="row mb-5 pb-5">
            <div class="col-lg-6">
                <div class="left-text">
                    <div class="section-heading">
                        <h2>Cambiar Contraseña</h2>
                    </div>
                    <p>Crea claves seguras y únicas para proteger tu información.</p>
                    <ul>
                        <li>
                            <span>Consejo!</span> Elige claves largas y complejas con letras, números y símbolos.
                            <br><br>
                            Evita información personal y palabras comunes para mayor seguridad.
                        </li>
                        <li><span>Teléfono</span> +506 2286 0161</li>
                        <li><span>Correo</span> <a href="mailto:informa@asociacionroblealto.org">informa@asociacionroblealto.org</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 mb-5 align-self-center">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { id = "user-form", onsubmit = "validateForm(event)" }))
                            {

                                <div class="row">
                                    <input type="hidden" id="userId" name="userId" value="@Model.userId" />
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <div>
                                                <span id="password-error" class="text-danger"></span>
                                                <input type="password" id="userPassword" name="userPassword" class="form-control" placeholder="Contraseña" oninput="validatePassword()" />
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <div>
                                                <span id="confirmPassword-error" class="text-danger"></span>
                                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirmar contraseña" oninput="validateConfirmPassword()" disabled />
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <a href="@Url.Action("UserProfile","User")" class="btn-form-submit" type="button"><i class="fa-solid fa-arrow-left"></i></a>
                                            <button type="submit" id="form-submit" class="btn-form-submit">Confirmar</button>
                                        </fieldset>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/ResetPasswordValidation.js"></script>
