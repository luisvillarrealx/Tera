@model Tera_Web.Entities.UserObj
@{
    Layout = "_LayoutAuth";
}

<div class="contact-page section">
    <div class="container">
        <div class="row ">
            <div class="col-lg-6 align-self-center">
                <div class="left-text">
                    <div class="section-heading">
                        <h2>Registrar usuario</h2>
                    </div>
                    <p>Ingresa tus credenciales para accesar al sistema y realizar pedidos.</p>
                    <ul>
                        <li><span>Dirección</span> Barrio Córdoba. Del Centro Comercial del Sur 75 metros sureste.</li>
                        <li><span>Teléfono</span> +506 2286 0161</li>
                        <li><span>Correo</span> <a href="mailto:informa@asociacionroblealto.org">informa@asociacionroblealto.org</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-12">
                        </div>
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Register", "User", FormMethod.Post))
                            {

                                <div class="row">
                                    <div class="col-lg-12">
                                        <fieldset>
                                            @Html.TextBoxFor(m => m.email, new{ @class="form-control", @placeholder="email", @type="email", @id="email", @name="email"})
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            @Html.TextBoxFor(m => m.password, new{ @class="form-control", @placeholder="Password", @type="password", @id="password", @name="password"})

                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            @Html.ActionLink("Olvidé mi contraseña", "Reset", "Auth")
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>

                                            <button type="submit" id="form-submit" class="btn_orange">Registrar</button>
                                        </fieldset>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  