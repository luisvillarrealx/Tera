@model Tera_Web.Entities.UserObj

@{
    ViewData["Title"] = "EditUser";
}

<section class="content mt-5">
    <div class="offset-4 container-fluid mt-5">
        <div class="row mt-5">
            <!-- left column -->
            <div class="col-md-4">
                <!-- general form elements -->
                <div class="">
                    <div class="card-header">
                        <h3 class="card-title pb-3 text-center">Edición de Usuario</h3>
                    </div>
                    @using (Html.BeginForm("EditUser", "User", FormMethod.Post))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group pb-2">
                            @Html.HiddenFor(m => m.userId)
                            <label asp-for="userId" class="control-label"></label>
                            <input asp-for="userId" class="form-control" readonly disabled />
                            <span asp-validation-for="userId" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userGovId" class="control-label"></label>
                            <input asp-for="userGovId" class="form-control" />
                            <span asp-validation-for="userGovId" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userName" class="control-label"></label>
                            <input asp-for="userName" class="form-control" />
                            <span asp-validation-for="userName" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userFirstSurname" class="control-label"></label>
                            <input asp-for="userFirstSurname" class="form-control" />
                            <span asp-validation-for="userFirstSurname" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userSecondSurname" class="control-label"></label>
                            <input asp-for="userSecondSurname" class="form-control" />
                            <span asp-validation-for="userSecondSurname" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userEmail" class="control-label"></label>
                            <input asp-for="userEmail" type="email" class="form-control" />
                            <span asp-validation-for="userEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userPassword" class="control-label"></label>
                            <input asp-for="userPassword" type="password" class="form-control" />
                            <span asp-validation-for="userPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-2">
                            <label asp-for="userRoleId" class="control-label"></label>
                            <input asp-for="userRoleId" class="form-control" />
                            <span asp-validation-for="userRoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group pb-3">
                            <label asp-for="userSiteId" class="control-label"></label>
                            <input asp-for="userSiteId" class="form-control" />
                            <span asp-validation-for="userSiteId" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check pb-2">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="userActive" /> @Html.DisplayNameFor(model => model.userActive)
                            </label>
                        </div>

                        <div class="form-group">
                            <input type="button" value="Cancelar" class="btn btn-danger offset-2" />
                            <input type="submit" value="Editar" class="btn btn-success offset-4" />
                        </div>
                    }
                </div>
            </div>

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
