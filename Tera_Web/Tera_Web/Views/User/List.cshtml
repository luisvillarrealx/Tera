@model IEnumerable<Tera_Web.Entities.UserObj>

@{
    ViewData["Title"] = "List";
}
<section class="content mt-5 mx-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Registro de usuarios</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <div class="pb-2">
                            <a href="@Url.Action("Register","User", new {})" class="btn btn-success ml-auto btn_orange" type="button" value=""><i class="fa-solid fa-plus"></i></a>
                        </div>
                        <table id="Table" class="table table-bordered table-striped">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userGovId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userFirstSurname)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userSecondSurname)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userEmail)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userRoleId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.userSiteId)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.userGovId))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userGovId)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.userName))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userName)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.userFirstSurname))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userFirstSurname)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.userSecondSurname))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userSecondSurname)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.userEmail))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userEmail)
                                            }
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.userActive)
                                        </td>
                                        <td>
                                            @if (item.userRoleId == default(int))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem=> item.userRoleId)
                                            }
                                        </td>
                                        <td>
                                            @if (item.userSiteId == default(int))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.userSiteId)
                                            }
                                        </td>
                                        <td class="text-center col-2">
                                            <a href="@Url.Action("EditUser","User", new { ID = item.userId })" class="text-warning px-2" type="" value=""><i class="fa-solid fa-file-pen"></i></a>
                                            <a href="#" class="text-danger px-2 delete-button" onclick="confirmDelete('@item.userId')" data-toggle="modal" data-target="#confirm-delete-modal"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Count() == 0)
                                {
                                    <tr class="text-center">
                                        <td colspan="9">Sin Datos</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

</section>
<!-- Modal -->
<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar Eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este dato?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-btn">Eliminar</button>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<script>
    function confirmDelete(userId) {
        document.getElementById('userIdToDelete').value = userId;
    }
    $(document).ready(function () {
        $('#confirm-delete-btn').click(function () {
            var userId = $('#userIdToDelete').val(); // ID del usuario a eliminar
            var confirmed = true;

            // Se ha confirmado la eliminación, realizar la solicitud AJAX al controlador
            $.ajax({
                url: '@Url.Action("Delete","User")',
                type: 'POST',
                data: { id: userId, confirmed: confirmed },
                success: function (data) {
                    // Manejar la respuesta del controlador aquí
                    // Por ejemplo, actualizar la lista de usuarios o redireccionar a otra página
                },
                error: function (error) {
                    // Manejo de errores
                }
            });
        });
    });
</script>