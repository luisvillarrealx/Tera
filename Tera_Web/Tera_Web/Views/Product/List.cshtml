@model IEnumerable<Tera_Web.Entities.ProductObj>

<section class="content mt-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title">Registro de productos</h3>
                    </div>
                    <div class="card-body table-responsive">
                        <div class="pb-2">
                            <a href="@Url.Action("Register","Product")" class="btn btn-primary ml-auto" type="button" value=""><i class="fa-solid fa-plus"></i></a>
                        </div>
                        <table id="Table" class="table table-bordered table-hover table-striped ">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.productId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.productName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.productCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.productMeasurementUnit)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.productId)
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.productName))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                            @Html.DisplayFor(modelItem => item.productName)
                                            }
                                        </td>
                                        <td>
                                            @if (item.productCost == default(int))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                            @Html.DisplayFor(modelItem => item.productCost)
                                            }
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.productMeasurementUnit))
                                            {
                                                <span class="text-center">-</span>
                                            }
                                            else
                                            {
                                            @Html.DisplayFor(modelItem => item.productMeasurementUnit)
                                            }
                                        </td>
                                        <td class="text-center col-2">
                                            <a href="@Url.Action("EditProduct","Product", new { ID = item.productId })" class="text-warning px-2" type="" value=""><i class="fa-solid fa-file-pen"></i></a>
                                            <a href="@Url.Action("DeleteProduct","Product", new { ID = item.productId })" class="text-danger px-2" type="" value=""><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>