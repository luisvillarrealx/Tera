@model Tera_Web.Entities.UserLoginObj
@{
    Layout = "_LayoutAuth";
    string msj = (ViewBag.MsjError != null ? ViewBag.MsjError.ToString() : string.Empty);
}

<div class="contact-page mt-5 pt-5">
    <div class="container mt-5 pt-5">
        <div class="row mb-5 pb-5">
            <div class="col-lg-6 align-self-center">
                <div class="left-text">
                    <div class="section-heading">
                        <h6>Bienvenido</h6>
                        <h2>Iniciar Sesión</h2>
                    </div>
                    <p>Ingresa tus credenciales para acceder al sistema y realizar pedidos.</p>
                    <ul>
                        <li><span>Dirección</span> Barrio Córdoba. Del Centro Comercial del Sur 75 metros sureste.</li>
                        <li><span>Teléfono</span> +506 2286 0161</li>
                        <li><span>Correo</span> <a href="mailto:informa@asociacionroblealto.org">informa@asociacionroblealto.org</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-12">
                        </div>
                        <div class="col-lg-12">
                            <p class="login-box-msg text-danger">@msj</p>
                            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <div>
                                                @Html.ValidationMessageFor(m => m.userEmail, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.userEmail, new { @class="form-control", @placeholder="Correo electrónico", @type = "email", @id="email", @name="email", @onblur= "EmailExists();"})
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            @Html.ValidationMessageFor(m => m.userPassword, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(m => m.userPassword, new { @class="form-control", @placeholder="Contraseña", @type = "password", @id = "password", @name = "password" })
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12 mb-3">
                                        <fieldset>
                                            @Html.ActionLink("Olvidé mi contraseña", "Reset", "Auth")
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="btn-form-submit">Iniciar sesión</button>
                                        </fieldset>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/resetpasswordvalidation.js"></script>