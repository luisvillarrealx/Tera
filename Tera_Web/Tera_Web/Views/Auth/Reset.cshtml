@model Tera_Web.Entities.UserObj
@{
    Layout = "_LayoutAuth";
}

<div class="contact-page section">
    <div class="container">
        <div class="row ">
            <div class="col-lg-6 align-self-center">
                <div class="left-text">
                    <div class="section-heading">
                        <h6>Bienvenido</h6>
                        <h2>Recuperar contraseña</h2>
                    </div>
                    <p>Ingresa el correo registrado para enviarte la contraseña.</p>
                    <ul>
                        <li><span>Dirección</span> Barrio Córdoba. Del Centro Comercial del Sur 75 metros sureste.</li>
                        <li><span>Teléfono</span> +506 2286 0161</li>
                        <li><span>Correo</span> <a href="mailto:informa@asociacionroblealto.org">informa@asociacionroblealto.org</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="right-content">
                    <div class="row">
                        <div class="col-lg-12">
                        </div>
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Reset", "Auth", FormMethod.Post, new { id = "user-form" }))
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <fieldset>
                                            @Html.TextBoxFor(m => m.userEmail, new { @class="form-control", @placeholder="Correo electrónico", @type = "email", @id="email", @name="email" })
                                            <span id="emailError" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="orange-button btn-form-submit">Recuperar</button>
                                        </fieldset>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/javascript.js"></script>